<body class="resumeindexbg">
	<div class="container">
	<div class="col-md-12">
	  <!-- 一个resume模型 -->
	    <div class="row">
	      <div class="col-md-3 col-sm-6 col-xs-12">
					<div class="product-item">
						<div class="pi-img-wrapper">

							<%= link_to image_tag("plussign_grey.jpg", class:"img-responsive", width: "235px", height: "235px"),new_user_resume_path%>

	        		<div>
								<%= link_to('新建简历',new_user_resume_path ,:class => 'btn') %>
							</div>
						</div>
					</div>
				</div>
     <!-- 标准简历模板 -->
				<div class="col-md-3 col-sm-6 col-xs-12">
					 <div class="product-item">
						 <div class="pi-img-wrapper">
							 <%= image_tag "sampleresume.jpg", class: "img-responsive" %>
							 <div>
								 <%= link_to "围观",user_standard_resume_path, class:"btn" %>
							 </div>
						 </div>
						 <h3>[全栈营简历大赛冠军简历]</h3>
						 <div class="pi-price">一份获得了90%面试概率的简历</div>
					 </div>
				 </div>
     <!-- 标准简历模板结束 -->
	      <% current_user.resumes.each do |resume| %>
					<% if resume.resume_html.present? %>
           <div class="col-md-3 col-sm-6 col-xs-12">
							 <div class="product-item">
								 <div class="pi-img-wrapper">
									 <!-- <img src="" class="img-responsive" alt="ResumeHere"> -->
									 <%= image_tag "sampleresume.jpg", class: "img-responsive" %>
									 <div>
										 <%= link_to "编辑", user_resume_preview_path(resume), class:"btn" %>
									 </div>
								 </div>
								 <h3>
									 <% if resume.resume_name.present? %>
									 	<%= resume.resume_name %>
									 <% else %>
									  [未命名简历]
									 <% end %>
								 </h3>
								 <div class="pi-price">更新于：<%= resume.created_at.strftime("%m/%e, %l:%M %p") %></div>
								 <!-- <a href="javascript:;" class="btn add2cart">Add to cart</a> -->
							 </div>
						</div>
						<% else %>
						<div class="col-md-3 col-sm-6 col-xs-12">
								<div class="product-item">
									<div class="pi-img-wrapper">
										<!-- <img src="" class="img-responsive" alt="ResumeHere"> -->
										<%= image_tag "sampleresume.jpg", class: "img-responsive" %>
										<div>
											<%= link_to "继续完成", page1_user_resume_path(resume), class:"btn" %>
										</div>
									</div>
									<h3><%= resume.resume_name %></h3>
									<div class="pi-price">更新于：<%= resume.created_at.strftime("%m/%e, %l:%M %p") %></div>
									<!-- <a href="javascript:;" class="btn add2cart">Add to cart</a> -->
								</div>
						 </div>
						<% end %>
					 <% end %>
				 </div>

	    </div>
	  <!-- template_v1 -->
	</div>
</div>
<br><br><br>
</body>
